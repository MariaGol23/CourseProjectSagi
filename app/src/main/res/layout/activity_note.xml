<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NoteActivity">


    <EditText
        android:id="@+id/ContentInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:ems="10"
        android:gravity="top"
        android:hint="@string/ContentHint"
        android:inputType="textCapSentences|textMultiLine"
        android:minHeight="48dp"
        android:layout_marginTop="20dp"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:layout_marginEnd="20dp"
        android:paddingTop="10dp"
        android:textColor="#666666"
        android:textColorHint="#666666"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13"

        tools:ignore="Autofill,RtlSymmetry,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/TitleInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@null"
        android:ems="10"
        android:layout_marginEnd="20dp"
        android:hint="@string/TitleHint"
        android:inputType="textCapSentences"
        android:imeOptions="actionNext"
        android:nextFocusForward="@+id/ContentInput"
        android:singleLine="true"
        android:maxLines="1"
        android:minHeight="48dp"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:textColor="#F57E68"
        android:textColorHint="#F57E68"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.001"
        tools:ignore="Autofill,RtlSymmetry,SpeakableTextPresentCheck,TextContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>